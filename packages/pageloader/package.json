{
  "name": "@bulma-ext/pageloader",
  "version": "1.0.0",
  "description": "A PageLoader / PageBlocker Stylesheet compatible with Bulma 1.0.x (https://bulma.io)",
  "license": "MIT",
  "main": "css/pageloader.min.css",
  "sass": "sass/pageloader.scss",
  "scripts": {
    "build:expanded": "sass sass/pageloader.scss css/pageloader.css --load-path=node_modules --quiet-deps --source-map",
    "build:min": "sass sass/pageloader.scss css/pageloader.min.css --load-path=node_modules --quiet-deps --style=compressed --no-source-map",
    "build": "pnpm run build:expanded && pnpm run build:min",
    "watch": "sass sass/pageloader.scss css/pageloader.css --watch"
  },
  "keywords": [
    "bulma",
    "bulma-extension"
  ],
  "peerDependencies": {
    "bulma": "^1.0.0"
  },
  "devDependencies": {
    "sass": "^1.77.0"
  }
}